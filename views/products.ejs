<script>
    // Open product modal with details
    const viewDetailBtns = document.querySelectorAll('.view-details-btn');
    const productModal = document.getElementById('productModal');
    const closeModal = document.querySelector('.close-btn');
    const productDetailContent = document.getElementById('productDetailContent');
    const loadbtn = document.getElementById('loadMore');

    viewDetailBtns.forEach(btn => {
        btn.addEventListener('click', (e) => {
            const product = JSON.parse(e.target.getAttribute('data-product'));
            // Show the modal with product details
            productDetailContent.innerHTML = `
                <h2>${product.title}</h2>
                <img src="${product.imageUrl}" alt="${product.title}" class="product-image" style="width:100%; height:auto;">
                <p><strong>Category:</strong> ${product.category}</p>
                <p><strong>Price:</strong> ₹${product.price}</p>
                <p><strong>Description:</strong> ${product.description || 'No description available.'}</p>
            `;
            productModal.style.display = 'block';
        });
    });

    // Close the modal
    closeModal.addEventListener('click', () => {
        productModal.style.display = 'none';
    });

    // Close modal if clicked outside
    window.onclick = function(event) {
        if (event.target == productModal) {
            productModal.style.display = 'none';
        }
    };
    const addToCartBtns = document.querySelectorAll('.add-to-cart-btn');

addToCartBtns.forEach(btn => {
    btn.addEventListener('click', async (e) => {
        const productId = e.target.getAttribute('data-product-id');
        const product = JSON.parse(e.target.previousElementSibling.getAttribute('data-product')); // Assuming this stores the product JSON

        const cartData = {
            title: product.title,
            price: product.price,
            quantity: 1, // Default to 1 for now
            image: product.imageUrl
        };

        try {
            const response = await fetch('/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(cartData)
            });

            const result = await response.json();
            if (response.ok) {
                alert(result.message);
            } else {
                alert(result.error);
            }
        } catch (error) {
            console.error('Error adding to cart:', error);
        }
    });
});


let currentIndex = 0;
const limit = 6;
const productCards = document.querySelectorAll('.product-card');

function loadMoreProducts() {
    for (let i = currentIndex; i < currentIndex + limit && i < productCards.length; i++) {
        productCards[i].style.display = 'block';
    }
    currentIndex += limit;

    if (currentIndex >= productCards.length) {
        loadbtn.style.display = 'none';
    }
}

productCards.forEach((card, index) => {
    if (index >= currentIndex + limit) {
        card.style.display = 'none';
    }
});

loadbtn.addEventListener('click', loadMoreProducts);




</script>
